<!DOCTYPE html>
<html>
  <head>
    <title>Twittter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <script src="https://use.fontawesome.com/bbb17c06a3.js"></script>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is_primary global-notification">
        <button class="delete"></button>
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is_danger global-notification">
        <button class="delete"></button>
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar is-info">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5"> Twittter </h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped">
            <p class="control">
              <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "button is-info is inverted" if user_signed_in?  %>
              <%= link_to 'Login', new_user_session_path , class: "button is-info is inverted" unless user_signed_in?  %>
            </p>
            <p class="control">
              <%= link_to "New Tweeet", new_tweeet_path, class: "button is-info is-inverted" %>
            </p>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
 