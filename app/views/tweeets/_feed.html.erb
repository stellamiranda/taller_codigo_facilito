<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/64x64.png" alt="">

            </p>
        </figure>
        <div class="media-content">
            <%= render "tweeets/form" %>
        </div>
    </article>



<% @tweeets.each do |t| %>
<div class="box">
    <div class="media">
        <div class="media-left">
            <figure class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/64x64.png" alt="">
            </figure>
        </div>
        <div class="media-content">
            <div class="content">
                <strong><%= t.user.name.capitalize %></strong><br />
                <small><%= t.user.username %></small><br />
                <p><%= t.tweeet %></p> 
            </div>
            <nav class="level"> 
                <div class="level-left is-mobile">
                    <%= link_to t, class: "level-item" do %>
                        <span class="icon">
                            <i class="fa fa-link" aria-hidden="true"></i>
                        </span>
                    <% end %>
                    <%= link_to edit_tweeet_path(t), class: "level-item" do %>
                    <span class="icon">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </span>
                    <% end %>

                    <%= link_to t, method: :delete, data: { confirm: "Are you sure you want to delete this tweeet" } do %>
                    <span class="icon">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </span>
                    <% end %>
                </div>
            </nav>
        </div>
    </div>
</div>

<% end %>
</div>